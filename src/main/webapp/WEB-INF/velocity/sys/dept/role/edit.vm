#set($layout="sys/layout.vm")

#set($page_title="角色管理")
#set($selected_menu_id="menu_sys_dept_role")

<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try {
                ace.settings.check('breadcrumbs', 'fixed')
            } catch (e) {
            }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/sys/index.html">首页</a>
            </li>

            <li class="active">角色管理</li>
        </ul>
        <!-- .breadcrumb -->

    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>角色管理  </h1>
        </div>

        <div class="row">
            <div class="col-lg-10">
                <form id="addForm" class="form-horizontal" role="form">

                    <input type="hidden" id="id" name="id" value="${role.id}" />

                    <div class="form-group">
                        <label class="col-lg-3 control-label no-padding-left" for="name"> 名称 </label>

                        <div class="col-lg-9">
                            <input type="text" id="name" name="name" value="${role.name}" placeholder="名称" class="col-xs-10 col-sm-5"/>
                        </div>
                    </div>
                    <div class="space-4"></div>






                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label no-padding-left" for="descp"> 描述</label>

                        <div class="col-lg-9">
                            <textarea style="padding: 5px;" id="descp" name="descp" placeholder="描述"
                                      class="col-xs-10 col-sm-5">$!{role.descp}</textarea>
                        </div>
                    </div>


                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label no-padding-left" for="oorder"> 排序值 </label>

                        <div class="col-lg-5">
                            <div class="ace-spinner" style="width: 70px;">
                                <div class="input-group">
                                    <input type="text" id="oorder" name="oorder" value="${role.oorder}" />
                                </div>
                            </div>
                        </div>
                    </div>





                </form>


            </div>
            <div class="col-lg-2">
                <input type="hidden" id="resourceIds" value="${resourceIds}" />
                <div id="tree1" class="ztree table-bordered" style="padding: 5px 4px;"></div>
            </div>

            <div class="col-lg-12">
                <form class="form-horizontal" role="form">

                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info btn-sm" type="button" id="btn-submit">
                                <i class="icon-ok bigger-110"></i>
                                保存
                            </button>


                            &nbsp; &nbsp; &nbsp;
                            <a class="btn  btn-sm" href="/sys/dept/role/list.html">
                                <i class="icon-reply bigger-110"></i>
                                返回列表
                            </a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script type="application/javascript" src="/statics/pages/sys/dept/role/edit.js"></script>